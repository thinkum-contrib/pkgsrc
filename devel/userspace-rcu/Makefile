DISTNAME=	userspace-rcu-0.11.1
CATEGORIES=	devel
MASTER_SITES=	https://lttng.org/files/urcu/
EXTRACT_SUFX=	.tar.bz2

MAINTAINER=	pettai@NetBSD.org
HOMEPAGE=	http://liburcu.org/
COMMENT=	Userspace RCU (Read Copy Update)
LICENSE=	gnu-lgpl-v2.1

GNU_CONFIGURE=	yes
USE_LIBTOOL=	yes
USE_TOOLS+=	gmake pkg-config

# liburcu requires thread local storage support; thus,
# only NetBSD-6 or later is supported.
NOT_FOR_PLATFORM=	NetBSD-[0-5]*-*

PKGCONFIG_OVERRIDE+=	src/liburcu-bp.pc.in
PKGCONFIG_OVERRIDE+=	src/liburcu-cds.pc.in
PKGCONFIG_OVERRIDE+=	src/liburcu-mb.pc.in
PKGCONFIG_OVERRIDE+=	src/liburcu-qsbr.pc.in
PKGCONFIG_OVERRIDE+=	src/liburcu-signal.pc.in
PKGCONFIG_OVERRIDE+=	src/liburcu.pc.in

.include "../../mk/pthread.buildlink3.mk"
.include "../../mk/bsd.pkg.mk"
